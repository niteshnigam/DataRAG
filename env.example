# Server Configuration
PORT=8000

# Default OpenAI credentials (can be overridden via request)
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL_NAME=gpt-3.5-turbo

# Default Pinecone credentials
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENV=your-pinecone-env
PINECONE_INDEX=your-index-name

# Optional: Qdrant Configuration
QDRANT_URL=https://your-qdrant-instance.qdrant.tech
QDRANT_API_KEY=your-qdrant-api-key

# Optional: Weaviate Configuration  
WEAVIATE_URL=https://your-weaviate-instance.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# Optional: Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2023-05-15

# Data Ingestion - Database Connection Examples
# MongoDB Connection String
MONGODB_URI=mongodb://username:password@host:port/database

# PostgreSQL Connection String  
POSTGRESQL_URI=postgresql://username:password@host:port/database

# MySQL Connection String
MYSQL_URI=mysql+pymysql://username:password@host:port/database 